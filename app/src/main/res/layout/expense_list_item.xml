<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_card_height"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/expense_card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/colorCards">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_card_supporting_text_padding">
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/supporting_text_size"
            android:padding="@dimen/default_textview_padding"
            android:textColor="@color/colorPrimaryLight"
            android:gravity="center"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/supporting_text_size"
            android:padding="@dimen/default_textview_padding"
            android:textColor="@color/colorPrimaryLight"
            android:gravity="center"/>

    </LinearLayout>

</android.support.v7.widget.CardView>